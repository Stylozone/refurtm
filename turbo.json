{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": [
        "^test"
      ]
    },
    "db:gen": {
      "cache": false,
      "dependsOn": [
        "^db:gen"
      ]
    },
    "db:seed": {
      "cache": false,
      "dependsOn": [
        "^db:seed"
      ]
    }
  }
}
