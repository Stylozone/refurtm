generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String  @id @default(uuid())
  title       String
  description String
  price       Float
  imageUrl    String
  condition   String
  category    String
  slug        String  @unique
}
